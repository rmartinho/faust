Path: PathBuf = String => (<>).into();
Array<T> = "[" <SepBy<T, ",">> "]";
Value<K, V> = K ":" <V>;
Entry<K, V> = <K> ":" <V>;
Object<T> = "{" <SepBy<T, ",">> "}";

SepBy<T, Sep>: Vec<T> = <mut v:(<T> Sep)*> <e:T?>
    => match e {
        None => v,
        Some(e) => {
            v.push(e);
            v
        }
    };

