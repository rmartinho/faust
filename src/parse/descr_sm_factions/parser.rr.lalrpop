pub Factions = <Value<"factions", Array<Faction>>> ","?;

Faction: Faction = Entry<String, FactionObject>
    =>? {
        let (id, mut props) = <>;
        props.push(Some(FactionProp::Id(id)));
        Ok(Faction::try_from(props)?)
    };

FactionObject = Object<FactionEntry>;

